---
import { VideoIcon } from "lucide-react";
---

<div class="hero">
    <div class="hero-content md:text-center">
        <div class="max-w-lg md:max-w-[92rem] space-y-12">
            <div class="hidden md:inline-flex badge py-3 px-4 badge-neutral md:text-lg">
                Conocé nuestros servicios
            </div>
            <div class="text-6xl md:text-[7rem] font-bold">
                <h1>Soluciones digitales</h1>
                <h1 class="font-caveat text-primary md:transform md:-rotate-4">a tu medida</h1>
            </div>
            <div class="flex flex-row gap-8 md:justify-center content-center">
                <button class="btn btn-xl btn-primary">
                    <VideoIcon aria-label="Video icon"/>
